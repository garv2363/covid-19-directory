<script type="text/javascript">
    $(document).ready(function(){
        var buyButton=$('.buyButton');
        var bookPrice=$('.bookPrice');
        if (bookPrice.text()=='$0' || bookPrice.text()==''){
            bookPrice.hide();
        }
        if (!buyButton.attr('href')){
            $(buyButton).hide();
        }
        var authorDesc=$('.authorDescription');
        if (!authorDesc.text()){
            $(authorDesc).hide();
        }
    })
    $('.authorPopup').click(function(){
        $('.authorPopup').hide();
    })
    $('.bookAuthor').click(function(){
        var authorPopup=$('.authorPopup');
        var windowHeight=$(window.top).height();
        authorPopup.css({top:((windowHeight-authorPopup.height())/2),'min-width':$('body').width()-80});
        authorPopup.show();
    })

</script>

